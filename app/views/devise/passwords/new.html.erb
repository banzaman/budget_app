<h2 class='title'>PASSWORD RESET</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

    <%= f.email_field :email, autocomplete: "email", placeholder: 'Email' %>

    <%= f.submit "Send me password reset instructions", class: 'login' %>
<% end %>